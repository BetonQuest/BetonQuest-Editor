<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.ScrollPane?>

<Tab xmlns:fx="http://javafx.com/fxml/1" text="%eco">
	<ScrollPane hbarPolicy="AS_NEEDED" fitToHeight="true"
		fitToWidth="true">
		<GridPane hgap="10">
			<padding>
				<Insets bottom="5" top="5" left="5" right="5" />
			</padding>
			<columnConstraints>
				<ColumnConstraints percentWidth="33.3" />
				<ColumnConstraints percentWidth="33.3" />
				<ColumnConstraints percentWidth="33.3" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints percentHeight="100" />
			</rowConstraints>

			<!-- events -->
			<VBox spacing="5" GridPane.columnIndex="0" GridPane.fillHeight="true">
				<Label text="%events" id="option-label" />
				<ListView VBox.vgrow="ALWAYS" />
				<ButtonBar>
					<buttons>
						<Button text="%add" />
						<Button text="%edit" />
						<Button text="%del" />
					</buttons>
				</ButtonBar>
			</VBox>

			<!-- conditions -->
			<VBox spacing="5" GridPane.columnIndex="1" GridPane.fillHeight="true">
				<Label text="%conditions" id="option-label" />
				<ListView VBox.vgrow="ALWAYS" />
				<ButtonBar>
					<buttons>
						<Button text="%add" />
						<Button text="%edit" />
						<Button text="%del" />
					</buttons>
				</ButtonBar>
			</VBox>

			<!-- objectives -->
			<VBox spacing="5" GridPane.columnIndex="2" GridPane.fillHeight="true">
				<Label text="%objectives" id="option-label" />
				<ListView VBox.vgrow="ALWAYS" />
				<ButtonBar>
					<buttons>
						<Button text="%add" />
						<Button text="%edit" />
						<Button text="%del" />
					</buttons>
				</ButtonBar>
			</VBox>

		</GridPane>
	</ScrollPane>
</Tab>
