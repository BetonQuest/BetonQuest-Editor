<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<VBox fx:id="root" xmlns:fx="http://javafx.com/fxml/1" spacing="5"
	fx:controller="pl.betoncraft.betonquest.editor.controller.MainPageLineEditController">

	<padding>
		<Insets top="10" left="10" right="10" bottom="10" />
	</padding>

	<Label text="%main-page-line" id="option-label" />
	<TextField focusTraversable="true" fx:id="id" />
	<TextArea focusTraversable="true" fx:id="text" wrapText="true" VBox.vgrow="ALWAYS" />
	<Button id="selectable" focusTraversable="true" fx:id="conditions" maxWidth="9000" onAction="#conditions" />
	<HBox spacing="5">
		<Label text="%priority" id="option-label" />
		<TextField focusTraversable="true" fx:id="priority" maxWidth="30" />
	</HBox>
	<ButtonBar>
		<buttons>
			<Button focusTraversable="false" text="%ok" onAction="#ok" />
			<Button focusTraversable="false" text="%cancel" onAction="#cancel" />
		</buttons>
	</ButtonBar>

</VBox>

