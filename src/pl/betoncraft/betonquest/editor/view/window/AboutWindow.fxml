<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>

<GridPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
	hgap="5" vgap="5"
	fx:controller="pl.betoncraft.betonquest.editor.controller.AboutController">
	<padding>
		<Insets top="10" left="10" bottom="10" right="10" />
	</padding>
	<columnConstraints>
		<ColumnConstraints hgrow="ALWAYS" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints vgrow="ALWAYS" />
		<RowConstraints maxHeight="30" />
	</rowConstraints>

	<TextFlow GridPane.rowIndex="0" GridPane.columnIndex="0"
		GridPane.fillWidth="true" GridPane.fillHeight="true" fx:id="text"
		id="entry-text" />
	<ImageView GridPane.rowIndex="0" GridPane.columnIndex="1"
		fx:id="image" GridPane.valignment="TOP" />
	<Button GridPane.rowIndex="1" GridPane.columnIndex="0"
		GridPane.columnSpan="2" GridPane.halignment="RIGHT" onAction="#close"
		text="%close" />

</GridPane>

